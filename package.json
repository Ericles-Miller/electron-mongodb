{
  "name": "electron-app",
  "version": "1.0.0",
  "description": "My test electron app",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch": "nodemon --exec electron .",
    "start": "electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "author": "CoderJeet",
  "license": "ISC",
  "devDependencies": {
    "electron": "^19.0.9",
    "electron-builder": "^25.0.0-alpha.9",
    "nodemon": "^2.0.19"
  },
  "dependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "mongodb": "^4.13.0",
    "typescript": "^5.4.5"
  },
  "build": {
    "appId": "com.yourcompany.yourapp",
    "productName": "YourApp",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "globals.js",
      "nodemon.json",
      "package.json",
      "./models/Employees.js",
      "./screens/viewBase.js",
      "./screens/main/main.html",
      "./screens/main/mainPreload.js",
      "./screens/main/mainScreen.js",
      "./screens/main/mainView.js",
      "./assets/css/bulma.min.css"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
